# .env.example

# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# Database Configuration (MongoDB example)
DB_URI=mongodb://localhost:27017/telco_recommendation
# DB_URI=mongodb+srv://username:password@cluster.mongodb.net/telco_recommendation

# PostgreSQL example (jika pakai PostgreSQL)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=telco_recommendation
# DB_USER=postgres
# DB_PASSWORD=password

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# ML Model Service (akan diisi nanti ketika model sudah deploy)
ML_SERVICE_URL=http://localhost:8000/predict
ML_SERVICE_TIMEOUT=30000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Optional: Firebase (jika pakai Firebase)
# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_PRIVATE_KEY=your-private-key
# FIREBASE_CLIENT_EMAIL=your-client-email